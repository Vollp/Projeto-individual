<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite a diciplina para calcular a mÃ©dia"
        android:textSize="25sp"
        android:textColor="#000000"
        android:id="@+id/diciplina"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ex: Matematica"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/diciplina"
        android:id="@+id/diciplina_texto"
        android:inputType="text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nota 01"
        android:textSize="25sp"
        android:textColor="#000000"
        android:id="@+id/nota_01"
        app:layout_constraintTop_toBottomOf="@id/diciplina_texto"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ex: 5.0"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/nota_01"
        android:id="@+id/nota01_texto"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nota 02"
        android:textSize="25sp"
        android:textColor="#000000"
        android:id="@+id/nota_02"
        app:layout_constraintTop_toBottomOf="@id/nota01_texto"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ex: 5.0"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/nota_02"
        android:id="@+id/nota02_texto"
        android:inputType="number"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="25sp"
        android:id="@+id/bt_01"
        app:layout_constraintTop_toBottomOf="@id/nota02_texto"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25sp"
        android:id="@+id/resultado"
        app:layout_constraintTop_toBottomOf="@id/bt_01"
        android:layout_marginTop="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>